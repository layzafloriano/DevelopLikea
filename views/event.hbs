<div class="container d-flex my-3">
  <nav class="sidebar-event col-3">
    {{> sidebar}}
  </nav>
  <div class="card col-8 card-event">
    <div class="card-body event-page">
        <h1>{{event.title}}</h1>
        <img src="{{event.imagePath}}" alt="{{event.imageName}}" class="img-fluid">
        <p>Date: {{event.date}}</p>
        <p>City: {{event.city}}</p>
        <p>Price: {{event.price}}</p>
        {{#if isOwner}}
        <a href="/edit-event/{{event._id}}">Edit this event</a>
        {{/if}}
      </div>
      <div id="map">
    </div>
  </div>
</div>

	{{!-- *****Modal***** --}}
	<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog">
		<div class="modal-dialog" role="document">
			<div class="modal-content">
				<div class="modal-header">
					<h5 class="modal-title">Are you sure?</h5>
					<button type="button" class="close" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="modal-footer">
					<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
					<button type="button" class="btn btn-primary"><a href="/delete-event/{{event._id}}">Delete</a></button>
				</div>
			</div>
		</div>
	</div>
</div>

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="https://maps.googleapis.com/maps/api/js?key={{API}}"></script>
<script type="text/javascript" src="/javascripts/main.js"></script>


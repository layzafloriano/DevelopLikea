<!-- views/auth/signup.hbs -->
<h2>Sign up</h2>

<form action="/auth/signup" method="POST" id="form-container">
	<label for="email">Email</label>
	<input type="email" name="email" id="email">
  <label for="username">Username</label>
  <input id="username" type="text" name="username" placeholder="username">
  <br><br>
  <label for="password">Password</label>
  <input id="password" type="password" name="password" placeholder="Your password">

  {{#if message}}
    <div class="error-message">{{ message }}</div>
  {{/if}}
  <br><br>
	<input type="checkbox" name="mentor" id="mentor">
  <label for="mentor">Mentor</label>

	<input type="checkbox" name="openToOpportunities" id="openToOpportunities">
	<label for="openToOpportunities">Open to opportunities</label>

  <button>Create account</button>

  <p class="account-message">
    Do you already have an account?
    <a href="/auth/login">Login</a>
  </p>
</form>
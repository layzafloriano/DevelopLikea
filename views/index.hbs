<div class="home-content">
  <div class="sidebar col-2">
    <div class="profile-data">
      <img src="{{user.imagePath}}" alt="{{user.imageName}}">
    </div>
    <nav>
      <ul class="navbar-nav">
        <li class="nav-item"><a href="/openings" class="nav-link">Openings</a></li>
        <li class="nav-item"><a href="/events" class="nav-link">Events</a></li>
        <li class="nav-item"><a href="#" class="nav-link">Find a mentor</a></li>
        <li class="nav-item"><a href="#" class="nav-link">Our database</a></li>
      </ul>
    </nav>
  </div>
  <div class="home-posts col-7">
    <h2>Posts</h2>
    {{#each posts}}
    {{> postsFeed}}
    {{/each}}
  </div>
  <aside class="home-side col-3">
    <div class="home-openings">
      <h2>Openings</h2>
      {{#each openings}}
      {{> openingsHome}}
      {{/each}}
    </div>
  </aside>
</div>
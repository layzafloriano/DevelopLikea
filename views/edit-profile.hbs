<form action="/edit-profile/{{userID}}" method="POST" enctype="multipart/form-data">
	<img src="{{user.imagePath}}" alt="profile image">
	<br><br>
	<label>Update picture</label>
	<br>
	<input type="file" name="profile-pic">
	<br><br>

	<label for="username">username:</label>
	<input type="text" name="username" id="username" value="{{user.username}}">
	<br><br>

	<label for="bio">Bio:</label>
	<textarea name="bio" id="bio" cols="30" rows="10">{{user.bio}}</textarea>
	<br><br>

	<label for="specialty">Specialty:</label>
	<select name="specialty" id="specialty">
		<option value="frontend">FrontEnd</option>
		<option value="backend">BackEnd</option>
		<option value="fullstack">FullStack</option>
		<option value="student">Student</option>
		<option value="other">Other</option>
	</select>
	<br><br>

	<label for="github">Github link:</label>
	<input type="text" name="github" value="{{user.github}}">
	<br><br>

	<label for="twitter">Twitter link:</label>
	<input type="text" name="twitter" value="{{user.twitter}}">
	<br><br>

	<label for="facebook">Linkedin link:</label>
	<input type="text" name="linkedin" value="{{user.linkedin}}">
	<br><br>

	<input type="checkbox" name="mentor" id="mentor">
	<label for="mentor">Mentor</label>
	<br><br>

	<input type="checkbox" name="openToOpportunities" id="openToOpportunities">
	<label for="openToOpportunities">Open to opportunities</label>
	<br><br>

	<label for="city">City</label>
	<input type="text" name="city" id="city" value="{{user.city}}">
	<br><br>

	<button type="submit">Update</button>
</form>


<button type="button" class="btn btn-danger mt-4" data-toggle="modal" data-target="#deleteModal">Delete my
	profile</button>

{{!-- *****Modal***** --}}
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Are you sure?</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
				<button type="button" class="btn btn-primary"><a href="/delete-profile/{{user._id}}">Delete</a></button>
			</div>
		</div>
	</div>
</div>
<div class="container d-flex">
  <nav class="sidebar-openings">
    {{> sidebar}}
  </nav>
	<div class="col-8 card-openings">
        <h2>Upcoming Events:</h2>
		{{#each events}}
		<div class="card mb-3">	
			<div class="card-body">
                <h3><a href="/event/{{this._id}}">{{this.title}}</a></h3>
                <img src="{{this.imagePath}}" class="image-events" alt="event image">
                <p>{{this.date}}</p>
                <p>{{this.city}}</p>
                <p>{{this.price}}</p>
                <a href="/event/{{this._id}}">See more</a>
			</div>
		</div>
		{{/each}}
	</div>
</div>
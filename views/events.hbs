<div class="container d-flex">
  <nav class="sidebar-events col-3">
   {{> sidebar}}
  </nav>
  <div class="col-8 card-content-pages">
      <h3>Upcoming Events:</h3>
      {{#each events}}
        <div class="card mb-3"> 
          <div class="card-body d-flex box-events-card">
            <div class="pic-and-name">
              <h4><a href="/event/{{this._id}}">{{this.title}}</a></h4>
              <p>{{this.date}}</p>
              <p>{{this.time}}</p>
              <p>{{this.city}}</p>
              <p>{{this.price}}</p>
            </div>
            <div>
              <img src="{{this.imagePath}}" class="image-events" alt="event image">
            </div>
          </div>
        </div>
      {{/each}}
    </div>
  </div>
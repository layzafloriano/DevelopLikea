  <script src="https://cdn.tiny.cloud/1/no-api-key/tinymce/5/tinymce.min.js"></script>
  <script>tinymce.init({selector:'textarea'});</script>

<div class="container my-5">
  <h1>Edit Post</h1>

  <form action="/edit-post/{{post._id}}" method="post" enctype="multipart/form-data">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="title" class="form-control" id="title" name="title" placeholder="Title" value="{{post.title}}">
    </div>
    <div class="form-group">
      <label for="text">Text</label>
      <textarea class="form-control" id="text" name="text" rows="15">{{post.text}}</textarea>
    </div>
    <picture>
      <img src="{{post.imagePath}}" alt="{{post.imageName}}" class="img-thumbnail">
    </picture>
    <div>
      <label for="photo">Edit image:</label>
      <input type="file" class="form-control-file" id="photo" name="photo">
    </div>
    <button type="submit" class="btn btn-primary mt-4">Save</button>

    <button type="button" class="btn btn-danger mt-4" data-toggle="modal" data-target="#deleteModal">Delete</button>

    {{!-- *****Modal***** --}}
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Are you sure?</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            <button type="button" class="btn btn-primary"><a href="/delete-post/{{post._id}}">Delete</a></button>
          </div>
        </div>
      </div>
    </div>
  </form>
</div>